{
  "expo": {
    "name": "Great Places",
    "description": "A Great Place App!",
    "slug": "great-places-app",
    "version": "1.0.0",
    "orientation": "portrait", 
    "icon": "./assets/places.png",
    "splash": { 
      "image": "./assets/splash_icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#171717"
    },
    "platforms": [
      "ios",
      "android"
    ],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios":  {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/places-adaptive.png",
        "backgroundColor": "#171717"
      }
    }
  }
}
